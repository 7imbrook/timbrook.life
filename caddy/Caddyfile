# Main Site
timbrook.life {
  gzip
  proxy /api {
    upstream api:3000
    without /api
  }
  root ./dist
  rewrite {
    if {path} not_match \/api/.*
    if {file} not_match (.*\.js|.*\.html|.*\.css)
    to /index.html
  }
}

# Auth backend
auth.timbrook.life {
  cors / https://timbrook.life http://localhost:8000
  gzip
  proxy / auth:80
}
